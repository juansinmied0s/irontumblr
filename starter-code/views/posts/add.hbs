<div class="container shadow p-3 mb-5 bg-white rounded">
  <h2>Post something!</h2>
  <form action="/add" method="POST" enctype="multipart/form-data">

    <div class="form-group">
      <label for="title">Title of your post</label>
      <input type="text" name="title" class="form-control" placeholder="Put a smart title">
    </div>

    <div class="form-group">
      <label for="content">Content of your post</label>
      <textarea name="content" id="" cols="30" rows="5" class="form-control" placeholder="Write an awesome post!"></textarea>
    </div>

    <div class="form-group-file">
      <label for="photo">Upload a picture</label>
      <input type="file" name="photo" placeholder="select a pic">
    </div>

    <button type="submit" class="btn btn-primary">Post it!</button>
  </form>
</div>