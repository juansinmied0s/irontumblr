<div class="container">
  <nav>
      <ul class="nav nav-pills">
        <li class="nav-item">
          <a href="/" class="nav-link active">Home</a>
        </li>
      </ul>
  </nav>
  <br><br>
  <h2>Post view</h2>
  <br>

  <div class="container shadow p-3 mb-5 bg-white rounded">
    <h4>{{title}}</h4>
    <img src="{{picPath}}" alt="">
    <p>{{content}}</p>
    <small>By: <b>{{creator.username}}</b></small>
    <hr>
    <h6>Comments</h6>
    {{#each posts as |post|}}
    <div class="container shadow p-3 mb-5 bg-white rounded">
      <img src="{{picPath}}" alt="">
      <p>{{content}}</p>
      <small>By: <b>{{creator.username}}</b></small><br><br>
    </div>
    {{else}}
    <div class="alert alert-warning" role="alert">
      There are no comments yet! :(
    </div>
    {{/each}}
  </div>

  <div class="container shadow p-3 mb-5 bg-white rounded">
    <h4>Add comment</h4>
    <form action="/add" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <label for="content">Content of your post</label>
        <textarea name="content" id="" cols="30" rows="5" class="form-control" placeholder="Be nice! (or not >:P)"></textarea>
      </div>

      <div class="form-group-file">
        <label for="photo">Upload a picture</label>
        <input type="file" name="photo" placeholder="select a pic">
      </div>

      <button type="submit" class="btn btn-primary">Comment</button>
    </form>
  </div>
</div>