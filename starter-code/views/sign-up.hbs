<div class="container shadow p-3 mb-5 bg-white rounded">
  <form action="/auth/signup" method="POST" enctype="multipart/form-data">
    <h2>Sign up</h2>

    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" placeholder="Your username" class="form-control">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" placeholder="********" class="form-control">
    </div>

    <div class="form-group-file">
      <label for="photo">Profile picture</label>
      <input type="file" name="photo" placeholder="select a pic">
    </div>

    <button type="submit" class="btn btn-primary">Create account</button>
      <p>
        You have an account? <a href="/auth/login">Login</a>
      </p>
  </form>
</div>